<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_movieItemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/iv_movieIcon"
        android:layout_width="128dp"
        android:layout_height="128dp" />

    <RatingBar
        android:id="@+id/rb_movieRating"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_movieIcon"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_movieIcon"
        android:rating="4.6"
        android:stepSize="0.1" />

    <TextView
        android:id="@+id/tv_movieName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_movieIcon"
        android:padding="10dp"
        android:textSize="24sp"
        tools:text="Interstellar" />

    <TextView
        android:id="@+id/tv_movieGenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_movieName"
        android:layout_toRightOf="@+id/iv_movieIcon"
        android:padding="10dp"
        tools:text="Science Fiction, Adventure" />

</RelativeLayout>